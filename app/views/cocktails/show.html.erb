<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @cocktail.image %>);">
  <div class="container">
    <h1><%= @cocktail.name %></h1>
  </div>
</div>


<div class="container">
  <ul class="list">
    <% @cocktail.doses.each do |dose| %>
      <li><%= dose.ingredient.name %> <%= dose.description %>
        <%= link_to " ❌", dose_path(dose), method: :delete %>
      </li>
    <% end %>
  </ul>

  <div>
    <%= render "doses/form", cocktail: @cocktail, dose: @dose %>
  </div>

  <%= link_to "Back", cocktails_path, class: "btn btn-primary" %>
</div>
