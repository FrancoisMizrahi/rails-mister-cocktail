<h1><%= @cocktail.name %></h1>
<ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.ingredient.name %> <%= dose.description %>
      <%= link_to "✖️", dose_path(dose), method: :delete %>
    </li>
  <% end %>
</ul>

<div>
  <%= render "doses/form", cocktail: @cocktail, dose: @dose %>
</div>

<%= link_to "Back", cocktails_path, class: "btn btn-primary" %>
