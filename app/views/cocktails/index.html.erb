  </div>
</div>

<div class="container">
  <div class="row">
  <% @cocktails.each do |cocktail| %>
  <div class="col-xs-12 col-sm-6 col-md-4">
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cocktail.image %>);"><%= link_to cocktail.name.capitalize, cocktail_path(cocktail.id) %><%= link_to "❌", cocktail_path(cocktail), method: :delete %></div>
    </div>
  <% end %>
  </div>
  <%= link_to "Add a cocktail", new_cocktail_path, class: "btn btn-primary" %>
</div>

